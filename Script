@@ -0,0 +1,361 @@
+let workbook;
+let rawRows = [];
+let activeData = [];
+let chartInstance;
+let refreshTimer;
+let currentSourceLabel = '—';
+
+const fileInput = document.getElementById('fileInput');
+const sheetSelect = document.getElementById('sheetSelect');
+const chartTypeSelect = document.getElementById('chartType');
+const aggregationSelect = document.getElementById('aggregation');
+const xFieldSelect = document.getElementById('xField');
+const yFieldSelect = document.getElementById('yField');
+const studentColumnSelect = document.getElementById('studentColumn');
+const studentFilterSelect = document.getElementById('studentFilter');
+const refreshChartButton = document.getElementById('refreshChart');
+const dataTable = document.getElementById('dataTable');
+const fileNameEl = document.getElementById('fileName');
+const sheetCountEl = document.getElementById('sheetCount');
+const rowCountEl = document.getElementById('rowCount');
+const columnCountEl = document.getElementById('columnCount');
+const sharepointInput = document.getElementById('sharepointUrl');
+const loadFromLinkButton = document.getElementById('loadFromLink');
+const manualRefreshButton = document.getElementById('manualRefresh');
+const autoRefreshCheckbox = document.getElementById('autoRefresh');
+const refreshIntervalInput = document.getElementById('refreshInterval');
+const refreshStatusEl = document.getElementById('refreshStatus');
+
+fileInput.addEventListener('change', handleFileSelect);
+loadFromLinkButton.addEventListener('click', handleRemoteLoad);
+manualRefreshButton.addEventListener('click', () => refreshFromSource(true));
+autoRefreshCheckbox.addEventListener('change', toggleAutoRefresh);
+sheetSelect.addEventListener('change', () => loadSheet(sheetSelect.value));
+chartTypeSelect.addEventListener('change', renderChart);
+aggregationSelect.addEventListener('change', renderChart);
+xFieldSelect.addEventListener('change', renderChart);
+yFieldSelect.addEventListener('change', renderChart);
+studentColumnSelect.addEventListener('change', updateStudentFilter);
+studentFilterSelect.addEventListener('change', applyFilters);
+refreshChartButton.addEventListener('click', renderChart);
+
+function handleFileSelect(event) {
+  const [file] = event.target.files;
+  if (!file) return;
+
+  const reader = new FileReader();
+  reader.onload = (e) => {
+    const data = new Uint8Array(e.target.result);
+    workbook = XLSX.read(data, { type: 'array' });
+    currentSourceLabel = file.name;
+    populateSheetPicker(file.name);
+    setRefreshStatus(`Loaded ${file.name}`);
+  };
+  reader.readAsArrayBuffer(file);
+}
+
+async function handleRemoteLoad() {
+  const url = sharepointInput.value.trim();
+  if (!url) return;
+  setRefreshStatus('Loading…');
+  await fetchWorkbookFromUrl(url, url);
+}
+
+async function refreshFromSource(manual = false) {
+  const url = sharepointInput.value.trim();
+  if (!url) return;
+  setRefreshStatus(manual ? 'Refreshing…' : 'Auto-refreshing…');
+  await fetchWorkbookFromUrl(url, url);
+}
+
+function toggleAutoRefresh() {
+  clearInterval(refreshTimer);
+  if (!autoRefreshCheckbox.checked) {
+    setRefreshStatus('Auto-refresh off');
+    return;
+  }
+
+  const seconds = Math.max(10, Number(refreshIntervalInput.value) || 60);
+  refreshIntervalInput.value = seconds;
+  refreshTimer = setInterval(() => refreshFromSource(false), seconds * 1000);
+  setRefreshStatus(`Auto-refreshing every ${seconds}s`);
+  refreshFromSource(false);
+}
+
+async function fetchWorkbookFromUrl(url, label = 'Remote file') {
+  try {
+    const response = await fetch(url);
+    if (!response.ok) throw new Error(`Request failed: ${response.status}`);
+    const arrayBuffer = await response.arrayBuffer();
+    workbook = XLSX.read(new Uint8Array(arrayBuffer), { type: 'array' });
+    currentSourceLabel = label;
+    manualRefreshButton.disabled = false;
+    populateSheetPicker(label);
+    setRefreshStatus(`Loaded ${label}`);
+  } catch (error) {
+    console.error(error);
+    setRefreshStatus('Could not load file. Check link or CORS permissions.');
+  }
+}
+
+function populateSheetPicker(fileName) {
+  const sheetNames = workbook.SheetNames || [];
+  sheetSelect.innerHTML = '';
+
+  sheetNames.forEach((name) => {
+    const option = document.createElement('option');
+    option.value = name;
+    option.textContent = name;
+    sheetSelect.appendChild(option);
+  });
+
+  sheetSelect.disabled = sheetNames.length === 0;
+  chartTypeSelect.disabled = sheetNames.length === 0;
+
+  fileNameEl.textContent = fileName || currentSourceLabel || '—';
+  sheetCountEl.textContent = sheetNames.length;
+
+  if (sheetNames.length) {
+    loadSheet(sheetNames[0]);
+  } else {
+    clearPreview();
+  }
+}
+
+function loadSheet(sheetName) {
+  const worksheet = workbook.Sheets[sheetName];
+  const rows = XLSX.utils.sheet_to_json(worksheet, { defval: '' });
+  rawRows = rows;
+  activeData = rows;
+
+  const columns = Object.keys(rows[0] || {});
+  updateSummary(rows, columns);
+  populateFieldSelectors(columns);
+  populateStudentSelectors(columns, rows);
+  applyFilters();
+}
+
+function updateSummary(rows, columns) {
+  rowCountEl.textContent = rows.length;
+  columnCountEl.textContent = columns.length;
+}
+
+function populateFieldSelectors(columns) {
+  [xFieldSelect, yFieldSelect].forEach((select) => {
+    select.innerHTML = '';
+    columns.forEach((col) => {
+      const option = document.createElement('option');
+      option.value = col;
+      option.textContent = col;
+      select.appendChild(option);
+    });
+    select.disabled = !columns.length;
+  });
+
+  chartTypeSelect.disabled = !columns.length;
+  refreshChartButton.disabled = !columns.length;
+  aggregationSelect.disabled = !columns.length;
+}
+
+function populateStudentSelectors(columns, rows) {
+  studentColumnSelect.innerHTML = '';
+  studentFilterSelect.innerHTML = '';
+
+  columns.forEach((col) => {
+    const option = document.createElement('option');
+    option.value = col;
+    option.textContent = col;
+    studentColumnSelect.appendChild(option);
+  });
+
+  const guessed = guessStudentColumn(columns);
+  if (guessed) {
+    studentColumnSelect.value = guessed;
+  }
+
+  const hasColumns = columns.length > 0;
+  studentColumnSelect.disabled = !hasColumns;
+  studentFilterSelect.disabled = !hasColumns;
+  updateStudentFilterOptions(rows);
+}
+
+function guessStudentColumn(columns) {
+  return columns.find((col) => /student/i.test(col));
+}
+
+function updateStudentFilter() {
+  updateStudentFilterOptions(rawRows);
+  applyFilters();
+}
+
+function updateStudentFilterOptions(rows) {
+  const column = studentColumnSelect.value;
+  studentFilterSelect.innerHTML = '';
+  const allOption = document.createElement('option');
+  allOption.value = '__all__';
+  allOption.textContent = 'All students';
+  studentFilterSelect.appendChild(allOption);
+
+  if (!column) return;
+
+  const uniqueNames = Array.from(new Set(rows.map((row) => stringifyValue(row[column])).filter(Boolean))).sort();
+  uniqueNames.forEach((name) => {
+    const option = document.createElement('option');
+    option.value = name;
+    option.textContent = name;
+    studentFilterSelect.appendChild(option);
+  });
+}
+
+function applyFilters() {
+  const studentColumn = studentColumnSelect.value;
+  const selectedStudent = studentFilterSelect.value;
+  if (studentColumn && selectedStudent && selectedStudent !== '__all__') {
+    activeData = rawRows.filter((row) => stringifyValue(row[studentColumn]) === selectedStudent);
+  } else {
+    activeData = rawRows;
+  }
+
+  const columns = Object.keys(rawRows[0] || {});
+  updateSummary(activeData, columns);
+  renderPreview(activeData, columns);
+  renderChart();
+}
+
+function renderPreview(rows, columns) {
+  dataTable.innerHTML = '';
+  if (!rows.length) {
+    dataTable.innerHTML = '<caption>No rows found in this sheet.</caption>';
+    return;
+  }
+
+  const thead = document.createElement('thead');
+  const headerRow = document.createElement('tr');
+  columns.forEach((col) => {
+    const th = document.createElement('th');
+    th.textContent = col;
+    headerRow.appendChild(th);
+  });
+  thead.appendChild(headerRow);
+
+  const tbody = document.createElement('tbody');
+  rows.slice(0, 50).forEach((row) => {
+    const tr = document.createElement('tr');
+    columns.forEach((col) => {
+      const td = document.createElement('td');
+      td.textContent = row[col];
+      tr.appendChild(td);
+    });
+    tbody.appendChild(tr);
+  });
+
+  dataTable.appendChild(thead);
+  dataTable.appendChild(tbody);
+}
+
+function renderChart() {
+  if (!activeData.length) return;
+  const xField = xFieldSelect.value;
+  const yField = yFieldSelect.value;
+  const chartType = chartTypeSelect.value;
+  const aggregation = aggregationSelect.value;
+
+  if (!xField) return;
+  if (aggregation === 'sum' && !yField) return;
+
+  const { labels, values } = buildSeries(activeData, xField, yField, chartType, aggregation);
+  const seriesLabel = aggregation === 'count' ? `Count by ${xField}` : `${yField} by ${xField}`;
+
+  const ctx = document.getElementById('dataChart').getContext('2d');
+  const palette = [
+    '#4f9cff', '#8ff2ff', '#ffc773', '#7cf29c', '#e384ff', '#ff9fb2',
+    '#b5f1ff', '#ffd166', '#a29bfe', '#8be9fd'
+  ];
+
+  if (chartInstance) chartInstance.destroy();
+
+  chartInstance = new Chart(ctx, {
+    type: chartType === 'pie' ? 'pie' : chartType,
+    data: {
+      labels,
+      datasets: [{
+        label: seriesLabel,
+        data: values,
+        backgroundColor: chartType === 'pie' ? palette : 'rgba(79, 156, 255, 0.5)',
+        borderColor: chartType === 'pie' ? palette : '#4f9cff',
+        borderWidth: 1.5,
+        tension: 0.3,
+        fill: chartType === 'line',
+      }]
+    },
+    options: {
+      responsive: true,
+      plugins: {
+        legend: { display: chartType === 'pie' },
+        tooltip: { enabled: true },
+      },
+      scales: chartType === 'pie' ? {} : {
+        y: { beginAtZero: true }
+      }
+    }
+  });
+}
+
+function buildSeries(rows, xField, yField, chartType, aggregation) {
+  const aggregates = new Map();
+
+  rows.forEach((row) => {
+    const xValues = splitMultiValue(row[xField]);
+    if (!xValues.length) return;
+
+    if (aggregation === 'count') {
+      xValues.forEach((val) => {
+        aggregates.set(val, (aggregates.get(val) || 0) + 1);
+      });
+    } else {
+      const numericY = Number(row[yField]);
+      if (!Number.isFinite(numericY)) return;
+      xValues.forEach((val) => {
+        aggregates.set(val, (aggregates.get(val) || 0) + numericY);
+      });
+    }
+  });
+
+  const labels = Array.from(aggregates.keys());
+  const values = labels.map((label) => aggregates.get(label));
+
+  if (chartType !== 'pie' && aggregation === 'count') {
+    return { labels, values };
+  }
+
+  return { labels, values };
+}
+
+function stringifyValue(value) {
+  if (value === undefined || value === null) return '';
+  if (value instanceof Date) return value.toISOString().slice(0, 10);
+  return String(value);
+}
+
+function splitMultiValue(value) {
+  const text = stringifyValue(value).trim();
+  if (!text) return [];
+  const parts = text.split(/[;,|]/).map((part) => part.trim()).filter(Boolean);
+  return parts.length ? parts : [text];
+}
+
+function setRefreshStatus(message) {
+  refreshStatusEl.textContent = message;
+}
+
+function clearPreview() {
+  dataTable.innerHTML = '';
+  fileNameEl.textContent = '—';
+  sheetCountEl.textContent = '0';
+  rowCountEl.textContent = '0';
+  columnCountEl.textContent = '0';
+  [sheetSelect, chartTypeSelect, xFieldSelect, yFieldSelect, aggregationSelect, studentColumnSelect, studentFilterSelect, refreshChartButton].forEach((el) => {
+    el.disabled = true;
+    el.innerHTML = '';
+  });
+}
